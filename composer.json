{
	"name": "wp-media/event-manager",
	"description": "Cloudflare Addon",
	"homepage": "https://github.com/wp-media/event-manager",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "WP Media",
			"email": "contact@wp-media.me",
			"homepage": "https://wp-media.me"
		}
	],
	"type": "library",
	"config": {
		"sort-packages": true
	},
	"support": {
		"issues": "https://github.com/wp-media/event-manager/issues",
		"source": "https://github.com/wp-media/event-manager"
	},
    "require": {
		"php": ">=5.6.0"
	},
	"require-dev": {
		"php": "^5.6 || ^7",
		"brain/monkey": "^2.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
		"phpcompatibility/phpcompatibility-wp": "^2.0",
		"phpunit/phpunit": "^5.7 || ^7",
		"wp-coding-standards/wpcs": "^2"
	},
	"autoload": {
		"psr-4": { "WP_Rocket\\Event_Management\\": "." },
		"exclude-from-classmap": [ "/Tests/" ]
	},
	"autoload-dev": {
		"psr-4": { "WPMedia\\EventManager\\Tests\\": "Tests/" }
	},
	"scripts": {
		"test-unit":"\"vendor/bin/phpunit\" --testsuite unit --colors=always --configuration Tests/Unit/phpunit.xml.dist",
		"test-integration": "\"vendor/bin/phpunit\" --testsuite integration --colors=always --configuration Tests/Integration/phpunit.xml.dist",
		"run-tests": [
			"@test-unit",
			"@test-integration"
		],
		"install-codestandards": "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run",
		"phpcs": "phpcs --basepath=.",
		"phpcs-changed": "./bin/phpcs-changed.sh",
		"phpcs:fix": "phpcbf"
	}
}
